@model List<KidKinder.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Basic table card start -->
                <div class="card">
                    <div class="card-header">
                        <br />
                        <h4>Servis Tablosu</h4>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr bgcolor="#F2F3F4">
                                        <th scope="col">#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Icon Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.ServiceId</th>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td><img src="@item.IconUrl"></td>
                                            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
                                        </tr>

                                    }
                                </tbody>

                            </table>
                            <a href="/Service/CreateService/" class="btn btn-primary">Yeni Service Girişi </a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

