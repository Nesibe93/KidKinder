@model List<KidKinder.Entities.About>

<div class="container-fluid py-5" id="about">
    <div class="container">
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-5">
                    <img class="img-fluid rounded mb-5 mb-lg-0"
                         src="@item.BigImageUrl"
                         alt="" />
                </div>
                <div class="col-lg-7">
                    <p class="section-title pr-5">

                        <span class="pr-2">@item.Header </span>
                    </p>
                    <h1 class="mb-4">@item.Title</h1>
                    <p>
                        @item.Description
                    </p>
                </div>
            }
        </div>

    </div>
</div>

